@model IEnumerable<Project_PRN.Models.Account>

@{
    ViewData["Title"] = "Account List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Account List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-username="@item.Username">Edit</a> |
                <a asp-action="Details" asp-route-username="@item.Username">Details</a> |
                <a asp-action="Delete" asp-route-username="@item.Username">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
